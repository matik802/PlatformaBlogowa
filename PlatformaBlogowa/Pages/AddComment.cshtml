@page "{PostId}"
@model PlatformaBlogowa.Pages.AddCommentModel
@{
	<form method="post">
        <input asp-for="Comment.PostId" class="form-control" hidden/>
        <div class="form-group">
            <label asp-for="Comment.Description" class="control-label"></label>
            <input asp-for="Comment.Description" class="form-control" />
            <span asp-validation-for="Comment.Description" class="text-danger"></span>
        </div>
        <div class="form-group">

        </div>
        <input asp-page-handler="AddComment" type="submit" value="Confirm" class="btn btn-primary" />
	</form>
}
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
